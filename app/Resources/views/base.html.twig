<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Taama |{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets 'bundles/app/css/*' filter='cssrewrite' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" 
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            {% block header %}
                <div id="top-nav" class="navbar navbar-inverse navbar-static-top">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-toggle"></span>
                            </button>
                            <a class="navbar-brand" href="{{ path("taama_home_index") }}" style="max-width: 50%;">
                                {% image '@TaamaBundle/Resources/public/images/logo.png' %}
                                    <img src="{{ asset_url }}" alt="loader" class="hidden-xs img-responsive"/>
                                {% endimage %}
                            </a>
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="#">Concept! <span class="sr-only">(current)</span></a></li>
                                <li><a href="#">Transporter un colis</a></li>
                                <li><a href="#">Envoyer un colis</a></li>
                                <li><a href="#">Contact</a></li>
                                <li class="dropdown">
                                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        
                                        <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
                                            <i class="glyphicon glyphicon-user"></i>   {{ app.user.username }} <span class="caret"></span></a>
                                        <ul id="g-account-menu" class="dropdown-menu" role="menu">
                                            <li>
                                                <a href="{{ path('fos_user_security_logout') }}">
                                                    <i class="glyphicon glyphicon-lock"></i>
                                                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                                </a>
                                            </li>
                                        </ul>
                                    {% else %}
                                        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                                    {% endif %}
                                </li>
                            </ul>
                        </div>
                    </div><!-- /container -->
                </div>
            {% endblock %}  <!-- End of block header -->
            <div class="container">
                <div class="row">
                    {% block link %}
                        <div class="col-sm-4">
                            <h3>Column 1</h3>
                        </div>
                        <div class="col-sm-4">
                            <h3>Column 2</h3>
                        </div>
                        <div class="col-sm-4">
                            <h3>Column 3</h3>
                        </div>
                    {% endblock %}
                </div>
                <div class="row">
                    {% block content %}
            
                    {% endblock %}
                </div>
            </div>
             <footer class="text-center">
                <p>Taama Â© {{ 'now'|date('Y') }}.</p>
            </footer>
        {% endblock %} <!-- End of block body -->


        {% block javascript %}
            {% javascripts 'Resources/public/js/*'  %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
